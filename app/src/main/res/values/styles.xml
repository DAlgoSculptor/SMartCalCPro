<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- No styles defined here as they are all in themes.xml -->
    <style name="GlassCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/glass_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:outlineSpotShadowColor">@android:color/transparent</item>
        <item name="android:outlineAmbientShadowColor">@android:color/transparent</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>
    <style name="GlassButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/glass_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources> 