<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Appearance Settings -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appearance Settings"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchDarkMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dark Mode"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theme"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/themeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:id="@+id/radioDefault"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Default"
                        android:layout_marginBottom="4dp"/>

                    <RadioButton
                        android:id="@+id/radioGreen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Green"
                        android:layout_marginBottom="4dp"/>

                    <RadioButton
                        android:id="@+id/radioYellow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yellow"
                        android:layout_marginBottom="4dp"/>

                    <RadioButton
                        android:id="@+id/radioBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blue"
                        android:layout_marginBottom="4dp"/>

                    <RadioButton
                        android:id="@+id/radioPurple"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Purple"/>

                </RadioGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnThemeCustomization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customize Theme"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Font Size"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderFontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="12"
                    android:valueTo="24"
                    android:stepSize="2"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Button Style"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackgroundImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Background Image"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackgroundSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Background Settings"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAnimationSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Animation Settings"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBlurSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blur Settings"
                    style="@style/Widget.Material3.Button.TextButton"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Functionality Settings -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Functionality Settings"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchRadians"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use Radians"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decimal Places"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderPrecision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:stepSize="1"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchScientific"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scientific Functions"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchHaptic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Haptic Feedback"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchVibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vibration"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sound"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAutoClear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto-clear Input"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchParentheses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Parentheses"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecimalSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Decimal Separator"
                    style="@style/Widget.Material3.Button.TextButton"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Smart Features -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smart Features"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchVoiceInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voice Input"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchHandwriting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Handwriting Input"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show History"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchPersistHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Persist History"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAutoCorrect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto-correction"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchStepByStep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step-by-step Solutions"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Localization &amp; Units -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Localization &amp; Units"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUnitSystem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unit System"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCurrencyFormat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Currency Format"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNumberFormat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number Format"
                    style="@style/Widget.Material3.Button.TextButton"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Privacy &amp; Storage -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy &amp; Storage"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClearData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear All Data"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClearHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear History"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export Data"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnImportData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Import Data"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAnalytics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usage Analytics"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export History"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchCloudSync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cloud Sync"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Developer Settings -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer Settings"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchBetaFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beta Features"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCustomFunctions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Functions"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchGraphing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advanced Graphing"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMathEngine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Math Engine Version"
                    style="@style/Widget.Material3.Button.TextButton"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView> 